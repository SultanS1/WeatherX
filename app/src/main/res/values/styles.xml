<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Title text style -->
    <style name="TitleStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/dp_1x</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Widget.SearchView.Material" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:elevation">@dimen/_2dp</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">@string/search_for_a_city</item>
        <item name="queryBackground">@drawable/rounded_corners</item>
    </style>

</resources>